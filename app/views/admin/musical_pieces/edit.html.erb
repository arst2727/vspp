<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <h4 class="px-5 py-2 mt-5 ml-5">楽曲データ編集</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <%= render 'layouts/error_messages', model: @musical_piece %>
      <%= form_with model: @musical_piece, url: admin_musical_piece_path, method: :patch, local: true do |f| %>
        <table class='table table-borderless field d-flex justify-content-center'>
          <tr><th>作曲家名(既存)</th><td><%= f.collection_select :composer_id, Composer.all.order(name_kana: :asc), :id, :name_kana %></td></tr>
          <tr><th>楽曲名</th><td><%= f.text_field :musical_piece_name %></td></tr>
          <tr><th>作曲年</th><td><%= f.text_field :year_of_composition %></td></tr>
          <tr><th>総演奏時間[min]</th><td><%= f.text_field :performance_time %></td></tr>
          <tr><th>参考リンク</th><td><%= f.text_field :reference_URL %></td></tr>
          <tr><th>表示ステータス</th><td>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "公開中" %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "非公開中" %>
          </td></tr>
          <tr><th></th><td>
          <button type="submit" class="btn btn-success">
          <% f.submit %>編集を保存
          </button>
          </td></tr>
        </table>
      <% end %>
    </div>
  </div>
</div>