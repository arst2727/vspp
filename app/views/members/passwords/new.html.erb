<div class="container text-center">
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-6 col-lg-4">
      <%= image_tag 'vspp.png',:size =>"70x50", :class =>'my-4' %>
      <h1 class='h3 mb-3 fw-normal'>パスワード再設定</h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "members/shared/error_messages", resource: resource %>

        <div class="field">
          <%#= f.label :email %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: 'w-100 form-control' %>
        </div>


        <div class="actions my-3">
          <%= f.submit "入力したメールアドレスにパスワード再設定メールを送る", class: "btn btn-primary" %>
        </div>
      <% end %>
      <%= render "members/shared/links" %>
    </div>
  </div>
</div>