<%= form_tag(search_path, method: :get) do %>
  <%= text_field_tag 'content', nil, placeholder: '検索ワード', class: 'js-text_field' %>
  <%= select_tag 'model', options_for_select({ "楽曲" => "musical_pieces", "作曲家" => "composers" }), class: "btn-sm btn-outline-dark" %>
  <%= submit_tag '検索', class: 'btn-sm btn-outline-dark' %>
<% end %>