<% if @model == 'composers' %>
  <h3 class='text-center pt-5 js-records'>"<%= @content %>"で<span class="br"></span>作曲家検索結果</h3>
  <%= render 'member/composers/index', composers: @records %>
<% else @model == 'musical_pieces' %>
  <h3 class='text-center pt-5 js-records'>"<%= @content %>"で<span class="br"></span>楽曲検索結果</h3>
  <%= render 'member/musical_pieces/index', musical_pieces: @records, musical_piece: @musical_piece %>
<% end %>