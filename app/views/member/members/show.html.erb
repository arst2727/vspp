<div "container">
  <div class='row justify-content-center'>
    <div class='col-lg-4 text-center'>
      <table class="table table-borderless my-3">
        <tr>
          <th>
            <% if current_member.profile_image.attached? %>
              <%= image_tag current_member.profile_image.variant(resize: '100x100'), class: "rounded-circle" %>
            <% else %>
              <%= image_tag 'no_image.jpg', class: "rounded-circle", size: '100x100' %>
            <% end %>
          </th>
          <td class='h4 pt-5'><%= @member.nickname %></td>
          <td class='pt-5'>
            <% if current_member.following?(@member) %>
              <%= link_to "フォロー中", member_relationships_path(@member.id), method: :delete, class: "btn btn-outline-dark" %>
            <% else %>
              <%= link_to "フォローする", member_relationships_path(@member.id), method: :post, class: "btn btn-dark" %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td><%= link_to @member.followings.count, member_followings_path(@member) %>フォロー中</td>
    	    <td><%= link_to @member.followers.count, member_followers_path(@member) %>フォロワー</td>
  	    </tr>
      </table>
    </div>
