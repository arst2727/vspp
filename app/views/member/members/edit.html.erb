<div "container">
  <div class='row'>
    <div class='col-6 offset-3'>
      <h4 class="px-5 py-2 mt-5 ml-5 bg-light text-dark text-center">マイページ編集画面</h4>
      <%= form_with url: member_path(current_member), model: @member, method: :patch, local:true do |f| %>
        <table class='table table-borderless'>
          <tr>
            <th><%= f.label :プロフィール画像 %></th>
            <td><%= f.file_field :profile_image, class: "form-control-file user_image" %></td>
          </tr>
          <tr>
            <th><%= f.label :ニックネーム %></th>
            <td><%= f.text_field :nickname, autofocus: true %></td>
          </tr>
          <tr>
            <th><%= f.label :メールアドレス %></th>
            <td><%= f.email_field :email, autocomplete: "email" %></td>
          </tr>
        </table>
        <%= f.submit "編集内容を保存", class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>