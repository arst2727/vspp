<div class='container'>
  <div class="row">
    <h4 class="px-5 py-2 mt-5 ml-5 bg-light text-dark">楽曲一覧</h4>
  </div>
  <div class='row'>
    <div class='col'>
      <table class='table table-striped table-sm'>
        <tr class="thead-dark">
          <th>楽曲名</th>
          <th>コメント数</th>
          <th>最終更新日</th>
        </tr>
        <% @musical_pieces.each do |musical_piece| %>
          <% if musical_piece.is_active == true %>
          <tr>
            <td>
              [<%= musical_piece.composer.name_kana %>]
              <%= link_to musical_piece_path(musical_piece) do %>
                <%= musical_piece.musical_piece_name %>
              <% end %>
            </td>
            <td></td>
            <td></td>
          </tr>
          <% end %>
        <% end %>
      </table>
    </div>
  </div>
</div>
