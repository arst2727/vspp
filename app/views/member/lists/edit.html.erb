<div class="container">
  <div class="row">
    <div class="<col-2></col-2>">
      <h4 class="px-5 py-2 mt-5 ml-5 text-dark">リスト名編集</h4>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col">
      <div class="text-center">
        <% if @list.errors.any? %>
          <%= @list.errors.count %> errors prohibited this list from being saved:<br>
          <% @list.errors.full_messages.each do |message| %>
            <%= message %><br>
          <% end %>
        <% end %>
        <%= form_with model: @list, url: list_path, method: :patch, local: true do |f| %>
          <table class='table table-borderless field d-flex justify-content-center'>
            <tr><th>リスト名(10文字以内)</th><td><%= f.text_field :name %></td></tr>
          </table>
          <button type="submit" class="btn btn-outline-dark">
            <% f.submit %>編集を保存
          </button>
        <% end %>
        <%= link_to 'キャンセル',lists_path, class: 'btn btn-outline-dark' %>
      </div>
    </div>
  </div>
</div>