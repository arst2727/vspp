<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-4">
      <h4 class="px-5 py-2 mt-5 ml-lg-5">新規リスト追加</h4>
    </div>
  </div>
  <div class="row justify-content-center mt-3">
    <div class="col-lg-6">
      <%= render 'layouts/error_messages', model: @list %>
        <%= form_with model: @list, url: lists_path, method: :post, local: true do |f| %>
          <table class='table table-borderless'>
            <tr><th>リスト名<span class='br'></span>(10文字以内)</th><td><%= f.text_field :name, class: "form-control", :placeholder => "あとで聴きたい" %></td></tr>
          </table>
          <%= f.hidden_field :member_id, :value => current_member.id %>
          <div class="text-center">
            <%= f.submit '新規追加', :class => 'btn btn-primary' %>
            <%= link_to 'キャンセル', lists_path, class: 'btn btn-outline-dark' %>
          </div>
        <% end %>
    </div>
  </div>
</div>